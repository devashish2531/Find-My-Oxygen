<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <br>
    <h1 class="display-5">All Available Oxygen Centers :</h1>
    <br>
    <% for (let oxygenCenter of oxygenCenters){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(oxygenCenter.images.length>0) {%>
                <img class="img-fluid" alt="" src="<%=oxygenCenter.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://images.unsplash.com/photo-1615486510988-2c6ecc66ceba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=750&q=80">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= oxygenCenter.title %> </h5>

                    <p class="card-text"><%= oxygenCenter.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= oxygenCenter.location%></small>
                    </p>
                    <a class="btn btn-secondary" href="/oxygenCenters/<%=oxygenCenter._id%>">View <%=oxygenCenter.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const oxygenCenters = { features: <%- JSON.stringify(oxygenCenters)%>}
</script>

<script src="/javascripts/clusterMap.js"></script>